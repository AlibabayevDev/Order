@using Order.WebCore.Models;

@model OrderViewModel

@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HeadArea
{
<title>Orders</title>
}

<div class="dataContainer mb-3 mt-3">
    <h1 style="text-align: center;">@ViewData["Title"]</h1>

    @if (@ViewBag.Message != null)
    {
        <div class="divAnim">@ViewBag.Message</div>
    }

    <form asp-action="SortDate" asp-controller="Order" method="get">
        <select asp-for="SortDate">
            <option value="1">Заказы на сегодня</option>
            <option value="2">Заказы на месяц</option>
        </select>

        <input type="submit" value="Фильтр"/>
    </form>

    <table id="ordersTable" class="table table-striped table-bordered tbl" style="width:100%">
        <thead>
            <tr>
                <th>Number</th>
                <th>Date</th>
                <th>Provider Name</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach(var order in Model.Orders)
            {
                <tr>
                    <td>@order.Number</td>
                    <td>@order.Date</td>
                    <td>@order.ProviderId</td>
                    <td><button class="btn btn-primary bgupdate" onclick="ShowSaveModal(this)" data-id="@order.Id" id="btnUpdate"><i class='fas fa-download'></i> Подробке о заказе</button></td>
                    <td><button class="btn btn-primary bgupdate" onclick="ShowSaveModal(this)" data-id="@order.Id" id="btnUpdate"><i class='fas fa-download'></i> Редактировать</button></td>
                    <td><button class="btn btn-danger bgdelete" onclick="ShowDeleteModal(this)" data-toggle="modal" data-id="@order.Id" data-target="#DelModal" id="btnDel"><i class='fas fa-trash-alt'></i> Удалить</button></td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>Number</th>
                <th>Date</th>
                <th>Provider Name</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </tfoot>
    </table>

</div>
<button class="btn btn-primary bgupdate" onclick="ShowSaveModal(this)" data-toggle="modal" data-id="0" id="myBtnAdd"><i class='fas fa-download'></i> Добавить заказ</button>

<div class="modal fade" id="createModal">
</div>
<!-- The Modal -->
<div class="modal fade" id="DelModal">
    <div class="modal-dialog">
        <!-- Modal content -->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Delete row</h4>
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>

            <div style="overflow-x:auto;" class="modal-body ">
                <p>Are you sure to delete this row?</p>
            </div>

            <div class="modal-footer">
                <form asp-action="Delete" asp-controller="Order" method="post">
                    <input asp-for="Deleted.Id" class="deletedId" hidden />
                    <button type="submit" class="btn btn-primary bgupdate">Yes</button>
                    <button type="button" class="btn btn-danger bgdelete" data-dismiss="modal">No</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section ScriptArea
{
<script>
    function ShowDeleteModal(elem) {
        var dataId = $(elem).data("id");
        $(".deletedId").val(dataId);
    }

    function ShowSaveModal(elem) {
        var dataId = $(elem).data("id");

        $.ajax({
            url: "/Order/Save?id=" + dataId,
            success: function (data) {
                $('#createModal').html(data);
                $("#createModal").modal("show");
            },
            error : function(error) {
                console.log(error);
            }
        });
    }

    $(document).ready(function () {

        $('#ordersTable tfoot th').each(function () {
            var title = $(this).text();
            $(this).html('<input type="text" placeholder="Search" style="width:100%;" />');
        });

            var table = $('#ordersTable').DataTable();

        table.columns().every(function () {
            var that = this;

            $('input', this.footer()).on('keyup change clear', function () {
                if (that.search() !== this.value) {
                    that.search(this.value).draw();
                }
            });
        });
    });
</script>
}
