@using Order.WebCore.Models;

@model OrderItemViewModel

@{
    ViewData["Title"] = "Свойство Заказа";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HeadArea
{
    <title>Свойство Заказа</title>
}
<div class="dataContainer mb-3 mt-3">
    <h1 style="text-align: center;">@ViewData["Title"] @Model.Order.Number</h1>

    @if (@ViewBag.Message != null)
    {
        <div class="divAnim">@ViewBag.Message</div>
    }

    <table id="orderItemsTable" class="table table-striped table-bordered tbl" style="width:100%">
        <thead>
            <tr>
                <th>Номер Заказа</th>
                <th>Название</th>
                <th>Количество</th>
                <th>Информация</th>
                <th>Дата</th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var orderItem in Model.OrderItems)
            {
                <tr>
                    <td>@orderItem.Order.Number</td>
                    <td>@orderItem.Name</td>
                    <td>@orderItem.Quantity</td>
                    <td>@orderItem.Unit</td>
                    <td>@orderItem.Order.Date</td>
                    <td><button class="btn btn-primary bgupdate" onclick="ShowSaveModal(this)" data-id="@orderItem.Id" id="btnUpdate"><i class='fas fa-download'></i> Редактировать</button></td>
                    <td><button class="btn btn-danger bgdelete" onclick="ShowDeleteModal(this)" data-toggle="modal" data-id="@orderItem.Id" data-target="#DelModal" id="btnDel"><i class='fas fa-trash-alt'></i> Удалить</button></td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Информация</th>
                <th>Номер Заказа</th>
                <th>Дата</th>
                <th></th>
                <th></th>
            </tr>
        </tfoot>
    </table>

    <button class="btn btn-primary bgupdate" onclick="ShowAddModal(this)" data-toggle="modal" data-id="@Model.Order.Id" id="myBtnAdd"><i class='fas fa-download'></i> Add</button>
</div>

<div class="modal fade" id="createModal">
</div>


<!-- The Modal -->
<div class="modal fade" id="DelModal">
    <div class="modal-dialog">
        <!-- Modal content -->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Delete row</h4>
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>

            <div style="overflow-x:auto;" class="modal-body ">
                <p>Are you sure to delete this row?</p>
            </div>

            <div class="modal-footer">
                <form asp-action="Delete" asp-controller="OrderItem" method="post">
                    <input asp-for="Deleted.Id" class="deletedId" hidden />
                    <button type="submit" class="btn btn-primary bgupdate">Yes</button>
                    <button type="button" class="btn btn-danger bgdelete" data-dismiss="modal">No</button>
                </form>
            </div>
        </div>
    </div>
</div>


@section ScriptArea
{
<script>

    function ShowDeleteModal(elem) {
        var dataId = $(elem).data("id");
        $(".deletedId").val(dataId);
    }

    function ShowSaveModal(elem) {
        var dataId = $(elem).data("id");

        $.ajax({
            url: "/OrderItem/Save?id=" + dataId,
            success: function (data) {
                $('#createModal').html(data);
                $("#createModal").modal("show");
            },
            error : function(error) {
                console.log(error);
            }
        });
    }

        function ShowAddModal(elem) {
            var dataId = $(elem).data("id");

            $.ajax({
                url: "/OrderItem/Add?id=" + dataId,
                success: function (data) {
                    $('#createModal').html(data);
                    $("#createModal").modal("show");
                },
                error: function (error) {
                    console.log(error);
                }
            });
        }

    $(document).ready(function () {

        $('#orderItemsTable tfoot th').each(function () {
            var title = $(this).text();
            $(this).html('<input type="text" placeholder="Search" style="width:100%;" />');
        });

            var table = $('#orderItemsTable').DataTable();

        table.columns().every(function () {
            var that = this;

            $('input', this.footer()).on('keyup change clear', function () {
                if (that.search() !== this.value) {
                    that.search(this.value).draw();
                }
            });
        });
    });
</script>
}
